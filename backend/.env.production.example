# AuraLynx Backend Production Environment Configuration
# Copy this file to .env.production and update the values for your production environment

# Django Settings - PRODUCTION
DEBUG=False
SECRET_KEY=your-super-secure-secret-key-minimum-50-characters-long-change-this
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# Database Configuration - PRODUCTION
# Use PostgreSQL for production
DATABASE_URL=postgresql://username:password@localhost:5432/auralynx_production
# Alternative: Use managed database service
# DATABASE_URL=postgresql://user:pass@rds.amazonaws.com:5432/auralynx

# AI Model Configuration - PRODUCTION
HUGGINGFACE_API_TOKEN=hf_your_production_token_here
OPENAI_API_KEY=sk-your_production_openai_key_here

# Model Settings - PRODUCTION OPTIMIZED
MODEL_CACHE_DIR=/var/cache/auralynx/models
TEMP_AUDIO_DIR=/tmp/auralynx_audio
MAX_AUDIO_SIZE_MB=50
DEFAULT_AUDIO_DURATION_SECONDS=120

# CORS Settings - RESTRICT TO YOUR DOMAIN
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# Media and Static Files - PRODUCTION PATHS
MEDIA_ROOT=/var/media/auralynx
STATIC_ROOT=/var/static/auralynx
MEDIA_URL=/media/
STATIC_URL=/static/

# FFmpeg Path - PRODUCTION
FFMPEG_PATH=/usr/bin/ffmpeg

# Performance Settings - PRODUCTION
TORCH_DEVICE=cuda
USE_GPU=True
MODEL_PRECISION=float16
ENABLE_MODEL_CACHING=True
MOCK_AI_RESPONSES=False

# Security Settings - PRODUCTION SECURITY
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_SSL_REDIRECT=True

# Performance & Scaling - PRODUCTION
MAX_CONCURRENT_REQUESTS=20
REQUEST_TIMEOUT_SECONDS=300
ENABLE_CELERY=True
REDIS_URL=redis://your-redis-server:6379/0

# Monitoring & Logging - PRODUCTION
LOG_LEVEL=WARNING
ENABLE_SENTRY=True
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Rate Limiting - PRODUCTION
ENABLE_RATE_LIMITING=True
REQUESTS_PER_MINUTE=20
REQUESTS_PER_HOUR=100

# Email Configuration - PRODUCTION
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password

# Backup and Storage - PRODUCTION
USE_S3_STORAGE=True
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=auralynx-media-production
AWS_S3_REGION_NAME=us-east-1

# Load Balancing - PRODUCTION
ENABLE_LOAD_BALANCING=True
HEALTH_CHECK_PATH=/api/health/
MAINTENANCE_MODE=False