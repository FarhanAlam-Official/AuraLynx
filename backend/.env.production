# Production Environment Configuration
DEBUG=False
SECRET_KEY=your-super-secret-production-key-here-change-this
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# Database Configuration (PostgreSQL for production)
DATABASE_URL=postgresql://username:password@localhost:5432/auralynx_db
# Alternative: SQLite for small deployments
# DATABASE_URL=sqlite:///db.sqlite3

# AI Model Configuration
HUGGINGFACE_API_TOKEN=hf_your_production_token_here
OPENAI_API_KEY=sk-your_openai_key_here

# Model Settings - Production Optimized
MODEL_CACHE_DIR=/var/cache/auralynx/models
TEMP_AUDIO_DIR=/tmp/auralynx_audio
MAX_AUDIO_SIZE_MB=50
DEFAULT_AUDIO_DURATION_SECONDS=120

# CORS Settings - Restrict to your domain
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Media and Static Files
MEDIA_ROOT=/var/media/auralynx
STATIC_ROOT=/var/static/auralynx
MEDIA_URL=/media/
STATIC_URL=/static/

# FFmpeg Path
FFMPEG_PATH=/usr/bin/ffmpeg

# Performance Settings - Production
TORCH_DEVICE=cuda  # Use GPU in production
USE_GPU=True
MODEL_PRECISION=float16  # Use half precision for better performance
ENABLE_MODEL_CACHING=True
MOCK_AI_RESPONSES=False

# Security Settings
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Performance & Scaling
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=300
ENABLE_CELERY=True  # For background task processing
REDIS_URL=redis://localhost:6379/0

# Monitoring & Logging
LOG_LEVEL=WARNING
ENABLE_SENTRY=True
SENTRY_DSN=your-sentry-dsn-here

# Rate Limiting
ENABLE_RATE_LIMITING=True
REQUESTS_PER_MINUTE=20
REQUESTS_PER_HOUR=100