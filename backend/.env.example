# AuraLynx Backend Environment Configuration
# Copy this file to .env and update the values for your environment

# Django Settings
DEBUG=True
SECRET_KEY=your-django-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
# Development: Use SQLite (default)
DATABASE_URL=sqlite:///db.sqlite3
# Production: Use PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/auralynx_db

# AI Model Configuration
# Required: Get your token from https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=hf_your_huggingface_token_here
# Optional: OpenAI API for enhanced features
OPENAI_API_KEY=sk-your_openai_api_key_here

# Model Settings
MODEL_CACHE_DIR=./models_cache
TEMP_AUDIO_DIR=./temp_audio
MAX_AUDIO_SIZE_MB=25
DEFAULT_AUDIO_DURATION_SECONDS=60

# CORS Settings - Allow frontend connection
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Media and Static Files
MEDIA_ROOT=./media
STATIC_ROOT=./staticfiles
MEDIA_URL=/media/
STATIC_URL=/static/

# FFmpeg Configuration
# Windows: Download from https://ffmpeg.org/download.html
FFMPEG_PATH=ffmpeg
# Linux/macOS: Usually installed in /usr/bin/ffmpeg or /usr/local/bin/ffmpeg

# Performance Settings
# Set to cuda if you have a compatible GPU, otherwise cpu
TORCH_DEVICE=cpu
USE_GPU=False
MODEL_PRECISION=float32
ENABLE_MODEL_CACHING=True
# Set to False to use real AI models, True for development with mock responses
MOCK_AI_RESPONSES=False

# Development Settings
MAX_CONCURRENT_REQUESTS=3
REQUEST_TIMEOUT_SECONDS=120
ENABLE_CELERY=False
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
ENABLE_SENTRY=False
SENTRY_DSN=your-sentry-dsn-here

# Rate Limiting (Development - more permissive)
ENABLE_RATE_LIMITING=False
REQUESTS_PER_MINUTE=60
REQUESTS_PER_HOUR=500

# Production Security Settings (set these in production)
SECURE_BROWSER_XSS_FILTER=False
SECURE_CONTENT_TYPE_NOSNIFF=False
X_FRAME_OPTIONS=SAMEORIGIN
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False