# AuraLynx Frontend Production Environment Configuration
# Copy this file to .env.production.local and update the values for your production environment

# Backend API Configuration - PRODUCTION
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
# Alternative: If backend is on same domain
# NEXT_PUBLIC_API_URL=https://yourdomain.com/api

# App Configuration - PRODUCTION
NEXT_PUBLIC_APP_NAME=AuraLynx
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=AI-Powered Music Creation Platform

# API Endpoints (relative to NEXT_PUBLIC_API_URL)
NEXT_PUBLIC_API_TRANSCRIBE=/api/transcribe/
NEXT_PUBLIC_API_GENERATE_LYRICS=/api/generate-lyrics/
NEXT_PUBLIC_API_GENERATE_INSTRUMENTAL=/api/generate-instrumental/
NEXT_PUBLIC_API_GENERATE_VOCALS=/api/generate-vocals/
NEXT_PUBLIC_API_MIX_AUDIO=/api/mix-audio/

# Feature Flags - PRODUCTION
NEXT_PUBLIC_ENABLE_VOICE_INPUT=true
NEXT_PUBLIC_ENABLE_GENRE_SELECTION=true
NEXT_PUBLIC_ENABLE_ADVANCED_MIXING=true
NEXT_PUBLIC_ENABLE_AUDIO_VISUALIZATION=true

# File Upload Configuration - PRODUCTION
NEXT_PUBLIC_MAX_AUDIO_SIZE_MB=50
NEXT_PUBLIC_ACCEPTED_AUDIO_FORMATS=.mp3,.wav,.m4a,.flac
NEXT_PUBLIC_MAX_TEXT_LENGTH=2000

# UI Configuration - PRODUCTION
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_SHOW_PROGRESS_DETAILS=false

# Analytics and Monitoring - PRODUCTION
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Production Settings
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_SHOW_DEV_TOOLS=false
NEXT_PUBLIC_LOG_LEVEL=error

# Audio Processing Settings - PRODUCTION
NEXT_PUBLIC_AUDIO_SAMPLE_RATE=44100
NEXT_PUBLIC_AUDIO_BIT_DEPTH=16
NEXT_PUBLIC_ENABLE_AUDIO_COMPRESSION=true

# Social and SEO - PRODUCTION
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_TWITTER_HANDLE=@AuraLynxAI
NEXT_PUBLIC_GITHUB_REPO=https://github.com/yourusername/auralynx
NEXT_PUBLIC_CONTACT_EMAIL=contact@yourdomain.com

# Error Handling - PRODUCTION
NEXT_PUBLIC_SHOW_ERROR_DETAILS=false
NEXT_PUBLIC_ERROR_RETRY_ATTEMPTS=3
NEXT_PUBLIC_ERROR_RETRY_DELAY_MS=1000

# Performance - PRODUCTION
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true
NEXT_PUBLIC_CACHE_STATIC_ASSETS=true
NEXT_PUBLIC_PRELOAD_CRITICAL_ASSETS=true

# Security - PRODUCTION
NEXT_PUBLIC_ENABLE_CSP=true
NEXT_PUBLIC_STRICT_TRANSPORT_SECURITY=true

# CDN and Assets - PRODUCTION
NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com
NEXT_PUBLIC_STATIC_ASSETS_URL=https://assets.yourdomain.com