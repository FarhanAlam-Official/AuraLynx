# AuraLynx Frontend Environment Configuration
# Copy this file to .env.local and update the values for your environment

# Backend API Configuration
# Development: Use local Django server
NEXT_PUBLIC_API_URL=http://localhost:8000
# Production: Use your deployed backend URL
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# App Configuration
NEXT_PUBLIC_APP_NAME=AuraLynx
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=AI-Powered Music Creation Platform

# API Endpoints (relative to NEXT_PUBLIC_API_URL)
NEXT_PUBLIC_API_TRANSCRIBE=/api/transcribe/
NEXT_PUBLIC_API_GENERATE_LYRICS=/api/generate-lyrics/
NEXT_PUBLIC_API_GENERATE_INSTRUMENTAL=/api/generate-instrumental/
NEXT_PUBLIC_API_GENERATE_VOCALS=/api/generate-vocals/
NEXT_PUBLIC_API_MIX_AUDIO=/api/mix-audio/

# Feature Flags
NEXT_PUBLIC_ENABLE_VOICE_INPUT=true
NEXT_PUBLIC_ENABLE_GENRE_SELECTION=true
NEXT_PUBLIC_ENABLE_ADVANCED_MIXING=true
NEXT_PUBLIC_ENABLE_AUDIO_VISUALIZATION=true

# File Upload Configuration
NEXT_PUBLIC_MAX_AUDIO_SIZE_MB=25
NEXT_PUBLIC_ACCEPTED_AUDIO_FORMATS=.mp3,.wav,.m4a,.flac,.ogg
NEXT_PUBLIC_MAX_TEXT_LENGTH=2000

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_SHOW_PROGRESS_DETAILS=true

# Analytics and Monitoring (Production)
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here
# VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Development Settings
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_SHOW_DEV_TOOLS=true
NEXT_PUBLIC_LOG_LEVEL=info

# Audio Processing Settings
NEXT_PUBLIC_AUDIO_SAMPLE_RATE=44100
NEXT_PUBLIC_AUDIO_BIT_DEPTH=16
NEXT_PUBLIC_ENABLE_AUDIO_COMPRESSION=true

# Social and SEO
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_TWITTER_HANDLE=@AuraLynxAI
NEXT_PUBLIC_GITHUB_REPO=https://github.com/yourusername/auralynx

# Error Handling
NEXT_PUBLIC_SHOW_ERROR_DETAILS=true
NEXT_PUBLIC_ERROR_RETRY_ATTEMPTS=3
NEXT_PUBLIC_ERROR_RETRY_DELAY_MS=2000